<div class="row login-form">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
    <div class="row">
      <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
        <%= notice || alert %>
      </div>
    </div>    
    <h6>Login</h6>
      <%= form_tag sessions_path do %>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <%= email_field_tag :email, nil, :placeholder => 'email'  %>
        </div>
      </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <%= password_field_tag :password, nil, :placeholder => 'password' %>
        </div>
      </div>
      <div class="row">
        <div class="small-offset-1 medium-offset-2 columns">
          <%= submit_tag 'Sign In', class: "button" %>
        </div>
      </div>
      <% end %>
    </div>
</div>
<div class="row login-form-below">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
    <div class="row">
      <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
        <p>New User? <%= link_to 'Sign up!', new_user_path %></p>
        <p><%= link_to 'Forgot password?', new_password_reset_path %></p>
      </div>
    </div>
  </div>
</div>
