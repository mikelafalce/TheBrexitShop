<div class="row reset-password-form">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
    <%= alert %>
    <h6>Set new password</h6>
    <div class="row">
      <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
        <div class="forgot-message">
          <p>Please enter a new password.</p>
        </div>
      </div>
    </div>

     <%= form_for @user, :url => { :controller => "password_resets", :action => "update"} do |f|%>

      <%= hidden_field_tag :email, @user.email %>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <%= f.password_field :password, placeholder: 'password' %>
        </div>
      </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <%= f.password_field :password_confirmation, placeholder: 'confirm password' %>
        </div>
      </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <%= f.submit "Update password", class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
