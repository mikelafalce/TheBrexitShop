<p id="notice"><%= notice %></p>
<div class="row new-user-form">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
    <h5>Products under <%= @category.name %> </h5>
      <% if @products.blank? %>
        <p>No products found <p>
      <% else %>
        <% @products.each do |p| %>
          <li><%= p.title %></li>
        <% end %>
      <% end %>
  </div>
</div>
