<p id="notice"><%= notice %></p>
<div class="row new-user-form">
  <div class="small-12 medium-10 medium-offset-1 large-10 large-offset-1 columns">
    <h6 class="product-category">Products under <%= @category.name %> </h6>
      <% if @products.blank? %>
        <p>No products found <p>
      <% else %>
        <% @products.each do |p| %>
          <li><%= p.title %></li>
        <% end %>
      <% end %>
  </div>
</div>
