<div class="row new-user-form">
  <div class="small-12 medium-10 medium-offset-1 large-8 large-offset-2 columns">
    <h6>Create an Account</h6>
    <%= form_for(@user) do |f| %>
    <div class="row">
      <div class="small-12 small-offset-1 medium-10 medium-offset-2 large-8 large-offset-2 columns">
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <% @user.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <div class="field">
            <%= f.text_field :username, placeholder: 'username' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-5 small-offset-1 medium-4 medium-offset-2 columns">
          <div class="field">
            <%= f.text_field :first_name, placeholder: 'first name' %>
          </div>
        </div>
        <div class="small-5 medium-4 columns">
          <div class="field">
            <%= f.text_field :last_name, placeholder: 'last name' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <div class="field">
            <%= f.text_field :email, placeholder: 'email' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <div class="field">
            <%= f.password_field :password, placeholder: 'password' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-10 small-offset-1 medium-8 medium-offset-2 columns">
          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: 'confirm password' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-offset-1 medium-offset-2 columns">
          <%= f.submit class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
